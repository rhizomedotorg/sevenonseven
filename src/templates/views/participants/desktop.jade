.participants
    - var participant = participants[0]
    #selected-participant-container
        include ./includes/full-participant


    .row
        .column-10.center-column
            .row
                for participant, i in participants
                    .one-seventh
                        div(class="mini-participant #{i === 0 ? 'selected' : ''}", data-participant-id="#{i}")
                            img(src="#{participant.thumbnail}")

                            .participant-names
                                | #{participant.artist.name}
                                br
                                | &
                                br
                                | #{participant.technologist.name}

